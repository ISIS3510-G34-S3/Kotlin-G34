<?xml version="1.0" encoding="utf-8"?>
<!-- Contenido del BottomSheet (el diÃ¡logo lo crea FilterBottomSheet.kt) -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@android:color/white">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_sliders"
            app:tint="@color/british_racing_green"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Filters"
            android:textColor="@color/foreground"
            android:textStyle="bold"
            android:textSize="16sp"/>

        <ImageButton
            android:id="@+id/btn_close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ripple_list_item_bg"
            android:padding="10dp"
            android:contentDescription="Close"
            android:src="@drawable/ic_x"
            app:tint="@color/ash_gray"/>
    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/ash_gray_30"/>

    <!-- Content scrollable -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Location -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_map_pin"
                    app:tint="@color/british_racing_green"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Location"
                    android:textColor="@color/foreground"
                    android:textStyle="bold"/>
            </LinearLayout>

            <EditText
                android:id="@+id/et_location"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_search_field"
                android:hint="Enter location..."
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColor="@color/foreground"
                android:textColorHint="@color/muted_foreground"
                android:singleLine="true"/>

            <!-- Activity Type -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Activity Type"
                android:textColor="@color/foreground"
                android:textStyle="bold"/>

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chips_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:singleSelection="false"
                app:chipSpacingHorizontal="8dp"
                app:chipSpacingVertical="8dp"/>

            <!-- Duration -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_clock"
                    app:tint="@color/british_racing_green"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Duration"
                    android:textColor="@color/foreground"
                    android:textStyle="bold"/>
            </LinearLayout>

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chips_duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:singleSelection="true"
                app:chipSpacingHorizontal="8dp"
                app:chipSpacingVertical="8dp"/>

            <!-- Skills Offered -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Skills Offered"
                android:textColor="@color/foreground"
                android:textStyle="bold"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="8dp">

                <EditText
                    android:id="@+id/et_skills"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_search_field"
                    android:hint="Search skills..."
                    android:paddingStart="16dp"
                    android:paddingEnd="44dp"
                    android:textColor="@color/foreground"
                    android:textColorHint="@color/muted_foreground"
                    android:singleLine="true"/>

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="14dp"
                    android:src="@drawable/ic_search"
                    app:tint="@color/ash_gray"/>
            </FrameLayout>

            <!-- Accessibility -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_users"
                    app:tint="@color/british_racing_green"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Accessibility"
                    android:textColor="@color/foreground"
                    android:textStyle="bold"/>
            </LinearLayout>

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_accessibility"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Accessibility friendly"
                android:checkable="true"
                app:chipBackgroundColor="@color/chip_bg_selector"
                app:chipStrokeColor="@color/chip_stroke_selector"
                app:chipStrokeWidth="@dimen/chip_stroke_width"
                app:checkedIconVisible="false"
                android:textColor="@color/chip_text_selector"/>

            <!-- Availability -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Availability"
                android:textColor="@color/foreground"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_date_start"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_search_field"
                    android:hint="Start date"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textColor="@color/foreground"
                    android:textColorHint="@color/muted_foreground"/>

                <Space
                    android:layout_width="12dp"
                    android:layout_height="1dp"/>

                <EditText
                    android:id="@+id/et_date_end"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_search_field"
                    android:hint="End date"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textColor="@color/foreground"
                    android:textColorHint="@color/muted_foreground"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Footer -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:background="@color/ash_gray_10"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_clear"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Clear All"
            android:textAllCaps="false"
            android:textColor="@color/foreground"
            app:strokeColor="@color/ash_gray"
            app:strokeWidth="1dp"
            app:backgroundTint="@android:color/white"/>

        <Space
            android:layout_width="12dp"
            android:layout_height="1dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_apply"
            style="@style/Widget.Material3.Button"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Apply Filters"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            app:backgroundTint="@color/rufous"/>
    </LinearLayout>
</LinearLayout>

