<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_arrow_left"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:title="Profile"
            android:titleTextAppearance="@style/TextAppearance.MaterialComponents.Headline6">

            <ImageButton
                android:id="@+id/btn_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_edit"
                android:contentDescription="Edit"/>
        </com.google.android.material.appbar.MaterialToolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="12dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:id="@+id/container"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:showDividers="none">

            <!-- Profile header -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardUseCompatPadding="true"
                android:padding="12dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/avatar"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:scaleType="centerCrop"
                        android:background="@color/gray_300"
                        android:src="@drawable/ic_users"
                        android:contentDescription="avatar"/>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/tv_name"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="Ana Sofia Rodriguez"
                                android:textStyle="bold"
                                android:textSize="16sp"/>

                            <ImageView
                                android:id="@+id/iv_verified"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_shield"
                                android:contentDescription="verified"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ana.sofia@email.com"
                            android:textSize="13sp"
                            android:textColor="@color/gray_600"/>

                        <TextView
                            android:id="@+id/tv_member_since"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Member since January 2024"
                            android:textSize="12sp"
                            android:textColor="@color/gray_500"
                            android:layout_marginTop="6dp"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Verification prompt -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_verify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:padding="12dp"
                app:cardBackgroundColor="@color/yellow_50">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_alert_triangle"
                        android:contentDescription="alert"/>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:text="Get Verified"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:text="Verify your identity to build trust with other users and unlock more features."
                            android:textSize="13sp"
                            android:layout_marginTop="4dp"
                            android:textColor="@color/gray_600" android:layout_height="wrap_content"
                            android:layout_width="wrap_content" />

                        <!-- Replacement: image + button to avoid icon/iconGravity attributes -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:id="@+id/iv_shield_icon"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_shield_check"
                                android:contentDescription="shield"
                                android:layout_marginEnd="8dp"
                                android:adjustViewBounds="true"/>

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btn_start_verification"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                                android:text="Start Verification"/>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- About -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:padding="12dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView android:text="About" android:textStyle="bold" android:layout_height="wrap_content"
                        android:layout_width="wrap_content" />
                    <TextView
                        android:id="@+id/tv_bio"
                        android:layout_marginTop="6dp"
                        android:textSize="13sp"
                        android:text="Passionate about Colombian culture and digital design..."
                        android:textColor="@color/gray_600" android:layout_height="wrap_content"
                        android:layout_width="wrap_content" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Languages -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:padding="12dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <ImageView android:layout_width="20dp" android:layout_height="20dp" android:src="@drawable/ic_globe"/>
                        <TextView android:layout_marginStart="8dp" android:text="Languages" android:textStyle="bold" android:layout_height="wrap_content"
                            android:layout_width="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/languages_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="8dp">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_hosted"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:nestedScrollingEnabled="false" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Experiences -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:padding="12dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView android:text="My Experiences" android:textStyle="bold" android:layout_marginBottom="8dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content" />

                    <View android:layout_width="match_parent" android:layout_height="8dp"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_joined"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Achievements -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:padding="12dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView android:text="Achievements" android:textStyle="bold" android:layout_marginBottom="8dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content" />

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="2"
                        android:rowCount="2"
                        android:alignmentMode="alignMargins"
                        android:columnOrderPreserved="false">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_columnWeight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="12dp">

                            <ImageView android:layout_width="36dp" android:layout_height="36dp" android:src="@drawable/ic_award"/>
                            <TextView android:layout_marginTop="6dp" android:text="Super Host" android:textSize="12sp"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_columnWeight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="12dp">

                            <ImageView android:layout_width="36dp" android:layout_height="36dp" android:src="@drawable/ic_star"/>
                            <TextView android:layout_marginTop="6dp" android:text="5 Star Host" android:textSize="12sp"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content" />
                        </LinearLayout>

                    </GridLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Settings -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:padding="12dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView android:text="Settings" android:textStyle="bold" android:layout_marginBottom="8dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content" />

                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">
                        <include layout="@layout/item_setting" android:padding="6dp" android:tag="notifications"/>
                        <include layout="@layout/item_setting" android:padding="6dp" android:tag="privacy"/>
                        <include layout="@layout/item_setting" android:padding="6dp" android:tag="payment"/>
                        <include layout="@layout/item_setting" android:padding="6dp" android:tag="language"/>
                        <include layout="@layout/item_setting" android:padding="6dp" android:tag="help"/>
                        <include layout="@layout/item_setting_logout" android:padding="6dp"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="End of profile"
                android:gravity="center"
                android:textColor="@color/gray_500"
                android:paddingBottom="24dp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
